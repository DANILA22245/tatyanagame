      "–æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ", "–Ω–∞–≤–µ—Ä–Ω—è–∫–∞", "–≤ —Ü–µ–ª–æ–º", "–º–µ–∂–¥—É —Ç–µ–º", "—Ç–∞–∫–∂–µ", "—Ç–µ–º –Ω–µ –º–µ–Ω–µ–µ", "–∫ —Ç–æ–º—É –∂–µ",
      "—Ç–æ –µ—Å—Ç—å", "–≤—Å—ë —Ä–∞–≤–Ω–æ", "–≤ –∫–æ–Ω–µ—á–Ω–æ–º —Å—á–µ—Ç–µ", "–±—É–∫–≤–∞–ª—å–Ω–æ", "–ø—Ä–∏–º–µ—Ä–Ω–æ", "–ø—Ä–∏—Ç–æ–º", "–ø–æ—á—Ç–∏",
      "–≤ –ø–µ—Ä–≤—É—é –æ—á–µ—Ä–µ–¥—å", "—Ñ–∞–∫—Ç–∏—á–µ—Å–∫–∏", "–≤ –æ–±—â–µ–º –∏ —Ü–µ–ª–æ–º", "–≤ —Å–≤—è–∑–∏ —Å —ç—Ç–∏–º", "–≤ –∫–æ–Ω–µ—á–Ω–æ–º –∏—Ç–æ–≥–µ",
      "–ø—Ä–æ—Å—Ç–æ", "–≤–¥–æ–±–∞–≤–æ–∫", "–ø–æ –º–µ—Ä–µ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏", "–≤ –ª—é–±–æ–º —Å–ª—É—á–∞–µ", "–ø—Ä–∏ –∂–µ–ª–∞–Ω–∏–∏", "–Ω–∞ –≤—Å—è–∫–∏–π —Å–ª—É—á–∞–π",
      "–Ω–∞–≤—Ä—è–¥ –ª–∏", "–≤–ø–æ—Å–ª–µ–¥—Å—Ç–≤–∏–∏"
    ];

    const intro = [
      "–∫–æ–Ω–µ—á–Ω–æ", "–Ω–µ—Å–æ–º–Ω–µ–Ω–Ω–æ", "–±–µ–∑—É—Å–ª–æ–≤–Ω–æ", "—Ä–∞–∑—É–º–µ–µ—Ç—Å—è", "–Ω–∞–≤–µ—Ä–Ω–æ–µ", "–º–æ–∂–µ—Ç –±—ã—Ç—å", "–∫–∞–∂–µ—Ç—Å—è",
      "–∫–∞–∑–∞–ª–æ—Å—å –±—ã", "–ø–æ-–≤–∏–¥–∏–º–æ–º—É", "–∫ —Å—á–∞—Å—Ç—å—é", "–∫ —Å–æ–∂–∞–ª–µ–Ω–∏—é", "–∫ —É–¥–∏–≤–ª–µ–Ω–∏—é", "–Ω–∞–ø—Ä–∏–º–µ—Ä",
      "–≤ —á–∞—Å—Ç–Ω–æ—Å—Ç–∏", "–∫ –ø—Ä–∏–º–µ—Ä—É", "—Ç–∞–∫", "–∏—Ç–∞–∫", "—Ç–∞–∫–∏–º –æ–±—Ä–∞–∑–æ–º", "–≤ –æ–±—â–µ–º", "—Å–ª–µ–¥–æ–≤–∞—Ç–µ–ª—å–Ω–æ",
      "–∑–Ω–∞—á–∏—Ç", "–Ω–∞–æ–±–æ—Ä–æ—Ç", "–Ω–∞–ø—Ä–æ—Ç–∏–≤", "–≤–æ-–ø–µ—Ä–≤—ã—Ö / –≤–æ-–≤—Ç–æ—Ä—ã—Ö", "—Å –æ–¥–Ω–æ–π —Å—Ç–æ—Ä–æ–Ω—ã",
      "—Å –¥—Ä—É–≥–æ–π —Å—Ç–æ—Ä–æ–Ω—ã", "–Ω–∞–∫–æ–Ω–µ—Ü", "–≤–ø—Ä–æ—á–µ–º", "–æ–¥–Ω–∞–∫–æ", "–∫—Ä–æ–º–µ —Ç–æ–≥–æ", "–ø—Ä–µ–∂–¥–µ –≤—Å–µ–≥–æ",
      "–º–µ–∂–¥—É –ø—Ä–æ—á–∏–º", "–∫—Å—Ç–∞—Ç–∏", "–æ–¥–Ω–∏–º —Å–ª–æ–≤–æ–º", "–¥—Ä—É–≥–∏–º–∏ —Å–ª–æ–≤–∞–º–∏", "–∫–æ—Ä–æ—Ç–∫–æ –≥–æ–≤–æ—Ä—è",
      "—Ç–æ—á–Ω–µ–µ –≥–æ–≤–æ—Ä—è", "—Å–æ–±—Å—Ç–≤–µ–Ω–Ω–æ –≥–æ–≤–æ—Ä—è", "–ø–æ —Å–ª–æ–≤–∞–º‚Ä¶", "–ø–æ —Å–æ–æ–±—â–µ–Ω–∏—é‚Ä¶", "–ø–æ —Å–≤–µ–¥–µ–Ω–∏—è–º‚Ä¶",
      "–ø–æ –º–Ω–µ–Ω–∏—é‚Ä¶", "–ø–æ-–º–æ–µ–º—É", "–ø–æ-—Ç–≤–æ–µ–º—É", "–Ω–∞ –º–æ–π –≤–∑–≥–ª—è–¥", "–ø–æ —Å–ª—É—Ö–∞–º", "–∫–∞–∫ –∏–∑–≤–µ—Å—Ç–Ω–æ",
      "–∫–∞–∫ –≥–æ–≤–æ—Ä—è—Ç", "–≤–∏–¥–∏—à—å (–ª–∏)", "–≤–∏–¥–∏—Ç–µ (–ª–∏)", "–ø–æ–Ω–∏–º–∞–µ—à—å (–ª–∏)", "–ø–æ–Ω–∏–º–∞–µ—Ç–µ (–ª–∏)",
      "–∑–Ω–∞–µ—à—å (–ª–∏)", "–∑–Ω–∞–µ—Ç–µ (–ª–∏)", "–∫–∞–∫ –ø—Ä–∞–≤–∏–ª–æ", "—á–µ—Å—Ç–Ω–æ –≥–æ–≤–æ—Ä—è"
    ];

    let items = [
      ...nonIntro.map(word => ({ word, type: 'non' })),
      ...intro.map(word => ({ word, type: 'intro' }))
    ];

    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    items = shuffle(items);
    let currentIndex = 0;
    let correctCount = 0;
    const totalCount = items.length;

    const currentWordEl = document.getElementById('current-word');
    const progressEl = document.getElementById('progress');
    const statsEl = document.getElementById('stats');
    const nonCol = document.getElementById('non-intro-col');
    const introCol = document.getElementById('intro-col');

    function updateProgress() {
      progressEl.textContent = `${currentIndex + 1} –∏–∑ ${totalCount}`;
    }

    function addToColumn(word, correctType) {
      const div = document.createElement('div');
      div.className = 'word-item';
      div.textContent = word;
      if (correctType === 'non') {
        nonCol.appendChild(div);
      } else {
        introCol.appendChild(div);
      }
    }

    function showNext() {
      if (currentIndex >= totalCount) {
        statsEl.innerHTML = `
          üéØ –í—Å—ë –ø—Ä–æ–π–¥–µ–Ω–æ!<br>
          –ü—Ä–∞–≤–∏–ª—å–Ω—ã—Ö –æ—Ç–≤–µ—Ç–æ–≤: <strong>${correctCount}</strong><br>
          –û—à–∏–±–æ–∫: <strong>${totalCount - correctCount}</strong>
        `;
        statsEl.style.display = 'block';
        currentWordEl.style.display = 'none';
        document.querySelector('.buttons').style.display = 'none';
        progressEl.style.display = 'none';
        return;
      }
      currentWordEl.textContent = items[currentIndex].word;
      currentWordEl.className = "";
      currentWordEl.style.display = 'block';
      updateProgress();
    }

    function choose(choice) {
      const currentItem = items[currentIndex];
      const isCorrect = (choice === currentItem.type);

      if (isCorrect) {
        correctCount++;
        currentWordEl.classList.add('correct');
      } else {
        currentWordEl.classList.add('incorrect');
        addToColumn(currentItem.word, currentItem.type);
      }

      setTimeout(() => {
        currentIndex++;
        showNext();
      }, 800);
    }

    updateProgress();
    showNext();
  </script>
